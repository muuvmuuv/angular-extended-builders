{
	"$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!**/generated*",
			"!**/*.html",
			"!projects/esbuild-graphql/lib/graphql-impl.ts"
		]
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							":URL:",
							":NODE:",
							":PACKAGE:",
							":PACKAGE_WITH_PROTOCOL:",
							":BLANK_LINE:",
							":ALIAS:",
							":BLANK_LINE:",
							":PATH:"
						]
					}
				}
			}
		}
	},
	"formatter": {
		"enabled": true,
		"useEditorconfig": true
	},
	"linter": {
		"enabled": true,
		"domains": {
			"project": "none"
		},
		"rules": {
			"recommended": true,
			"a11y": "error",
			"nursery": {
				"recommended": true
			},
			"performance": "error",
			"security": "error",
			"style": "error",
			"correctness": "error",
			"complexity": "error",
			"suspicious": "error"
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		},
		"globals": ["BUILD_ENV", "BUILD_DATE", "APP_VERSION", "APP_HASH", "NONCE"]
	},
	"json": {
		"formatter": { "enabled": true }
	},
	"overrides": [
		{
			"includes": ["**"],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off",
						"useExportsLast": "off",
						"useNamingConvention": "off"
					},
					"complexity": {
						"noExcessiveLinesPerFunction": "off"
					},
					"security": {
						"noSecrets": "off"
					}
				}
			}
		},
		{
			"includes": [
				"projects/esbuild-graphql/**",
				"projects/app/plugins/**",
				"projects/angular-extended-builder/**"
			],
			"linter": {
				"rules": {
					"performance": {
						"noNamespaceImport": "off"
					},
					"correctness": {
						"noNodejsModules": "off"
					}
				}
			}
		}
	]
}
