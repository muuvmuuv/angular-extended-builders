{
	"name": "angular-extended-builders-workspace",
	"version": "0.0.0",
	"license": "MIT",
	"type": "module",
	"private": true,
	"scripts": {
		"watch": "pnpm --parallel --filter=!app watch",
		"build": "pnpm --parallel --filter=!app build",
		"build-app": "pnpm --filter=app build",
		"serve": "pnpm --filter=app serve",
		"lint": "biome check .",
		"format": "biome check --unsafe --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@commitlint/cli": "^19.7.1",
		"@commitlint/config-angular": "^19.7.1",
		"@types/node": "^22.13.5",
		"del-cli": "^6.0.0",
		"lefthook": "^1.11.0",
		"prettier": "^3.5.2",
		"typescript": "5.6.3"
	},
	"engines": {
		"node": ">=22"
	},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": ["zone.js"],
			"allowAny": ["zone.js"]
		}
	}
}
