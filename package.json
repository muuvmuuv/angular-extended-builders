{
	"name": "angular-extended-builders-workspace",
	"version": "0.0.0",
	"license": "MIT",
	"type": "module",
	"private": true,
	"scripts": {
		"watch": "pnpm --parallel --filter=!app watch",
		"build": "pnpm --parallel --filter=!app build",
		"build-app": "pnpm --filter=app build",
		"serve": "pnpm --filter=app serve",
		"lint": "biome check .",
		"format": "biome check --unsafe --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@commitlint/cli": "^19.6.1",
		"@commitlint/config-angular": "^19.7.0",
		"@types/node": "^22.10.7",
		"del-cli": "^6.0.0",
		"lefthook": "^1.10.8",
		"prettier": "^3.4.2",
		"typescript": "5.7.2"
	},
	"engines": {
		"node": ">=22",
		"pnpm": ">=9"
	},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": ["zone.js"],
			"allowAny": ["zone.js"]
		}
	}
}
