{
	"name": "angular-extended-builders-workspace",
	"version": "0.0.0",
	"license": "MIT",
	"type": "module",
	"private": true,
	"scripts": {
		"watch": "pnpm --parallel --filter=!app watch",
		"build": "pnpm --parallel --filter=!app build",
		"build-app": "ANGULAR_EXTENDED_BUILDER=debug pnpm --filter=app build",
		"serve": "pnpm --filter=app serve",
		"lint": "biome check .",
		"format": "biome check --unsafe --write .",
		"release": "pnpm --filter=angular-extended-builder publish"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.2",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-angular": "^20.0.0",
		"@types/node": "^22.18.13",
		"del-cli": "^6.0.0",
		"lefthook": "^2.0.2",
		"prettier": "^3.6.2",
		"typescript": "5.8.3"
	},
	"engines": {
		"node": ">=20.11.1"
	}
}
